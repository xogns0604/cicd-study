pipeline {
    agent any
    
    tools {
        jdk 'jdk17'
    }
    
    stages {
        stage('Check if PR') {
            steps {
                script {
                    if (env.CHANGE_ID == null) {
                        // CHANGE_ID가 없다면 PR이 아님
                        error('This build is not from a Pull Request. Skipping...')
                    }
                }
            }
        }
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Test') {
            steps {
                sh '''
                    chmod +x ./gradlew
                    ./gradlew test
                '''
            }
            post {
                always {
                    junit '**/build/test-results/test/*.xml'
                }
            }
        }
        
        stage('Build') {
            steps {
                sh './gradlew clean build -x test'
            }
        }
    }
    
    post {
        success {
            echo 'CI Pipeline succeeded!'
        }
        failure {
            echo 'CI Pipeline failed!'
        }
    }
}
